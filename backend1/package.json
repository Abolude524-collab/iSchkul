{
  "name": "ischkul-backend",
  "version": "1.0.0",
  "description": "Open-source Node.js backend for ischkul",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "create-indexes": "node scripts/create-indexes.js",
    "check-indexes": "node -e \"require('mongoose').connect(process.env.MONGODB_URI).then(() => require('./models/User').collection.getIndexes().then(i => console.log('User indexes:', i))).then(() => process.exit())\"",
    "optimize": "npm run create-indexes && echo 'Optimization complete!'",
    "repair-xp": "node scripts/repair-xp-sync.js",
    "verify-xp": "node scripts/verify-xp-fix.js",
    "check-sotw": "node scripts/check-sotw-current-week.js",
    "fix-sotw": "node fix-sotw-auto-rotation.js",
    "fix-production": "npm run repair-xp && npm run create-indexes && npm run fix-sotw && echo 'âœ… Production fixes applied'"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "chat",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@google/generative-ai": "^0.21.0",
    "@pinecone-database/pinecone": "^6.1.3",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "jszip": "^3.10.1",
    "mammoth": "^1.6.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.15.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.2",
    "socket.io": "^4.7.0",
    "uuid": "^9.0.0",
    "xml2js": "^0.6.2"
  },
  "optionalDependencies": {
    "extract-files-from-pptx": "^2.0.0",
    "pdf2pic": "^2.2.0",
