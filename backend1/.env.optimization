# Performance Optimization Environment Variables
# Copy these to your .env file for production

# Node Environment (set to 'production' for production)
NODE_ENV=production

# MongoDB Connection Pooling
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Socket.io Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Logging
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=300 # Cache time-to-live in seconds (5 minutes)

# Enable/Disable Features
ENABLE_QUERY_LOGGING=false # Set to true only in development
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
